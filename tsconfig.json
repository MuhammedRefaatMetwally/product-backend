{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    "baseUrl": "./src",
    "paths": {
      "#src/*": ["./*"],
      "#config/*": ["./config/*"],
      "#controllers/*": ["./controllers/*"],
      "#middleware/*": ["./middleware/*"],
      "#models/*": ["./models/*"],
      "#routes/*": ["./routes/*"],
      "#services/*": ["./services/*"],
      "#utils/*": ["./utils/*"],
      "#validations/*": ["./validations/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "esm": true
  }
}